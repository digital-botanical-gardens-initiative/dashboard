<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Digital Botanical Garden Initiative</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script type="text/javascript" language="javascript" src="../JSME_2022-09-26/jsme/jsme.nocache.js"></script>
  <link rel="stylesheet" href="https://jsme-editor.github.io/dist/jsme/jsa.css">
  <link rel="stylesheet" href="https://jsme-editor.github.io/dist/jsme/gwt/chrome/chrome.css">
  <link rel="stylesheet" href="https://jsme-editor.github.io/dist/jsme/gwt/chrome/mosaic.css">
  <script src="https://jsme-editor.github.io/dist/jsme/1C61E97966828F622DAAC75966E89735.cache.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="js/app.js" defer></script>
  <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
  <script src="https://d3js.org/d3.v6.min.js"></script>
  <script>
        //this function will be called after the JavaScriptApplet code has been loaded.
        function jsmeOnLoad() {
            jsmeApplet = new JSApplet.JSME("jsme_container", "380px", "340px");
        }
 </script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var ids = ["by_text", "by_structure"];
      var dropDown = document.getElementById("search_type");
    
      dropDown.onchange = function () {
        for (var x = 0; x < ids.length; x++) {
          document.getElementById(ids[x]).style.display = "none";
        }
        document.getElementById(this.value).style.display = "block";
      }
    });
  </script>
  <style>
    .navbar {background-color: green;}
    .hidden{
    display: none;
    }
  </style>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <h1>Explore data</h1>
    <br>
    <select name="search type" id="search_type">
        <option value="by_text">By text</option>
        <option value="by_structure">By structure</option>
    </select>
    <div id="by_text" class="hidden"> 
      <hr>
      <form action="/explore" method="POST" enctype="application/x-www-form-urlencoded">
        <select name="column"> <!-- Updated name attribute -->
          <% columns.forEach(column => { %>
            <option value="<%= column.column_name %>"><%= column.column_name %></option>
          <% }) %>
        </select>
        <input type="text" name="search" placeholder="Search">
        <button type="submit">Search</button>
      </form>
      <% if (typeof results !== 'undefined') { %>
        <ul>
          <% results.forEach(result => { %>
            <li><%= JSON.stringify(result) %></li>
          <% }) %>
        </ul>
      <% } %>
      </form>
    </div>
    <div id="by_structure" class="hidden">
      <hr> 
      <div id="jsme-container"></div>
      search by structure 
    </div>

</body>
</html>